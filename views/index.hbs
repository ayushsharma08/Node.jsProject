          <button class="btn btn-outline-primary">
            Enroll Now
          </button>

        </div>
      </div>
    </div>
  </section>

{{!-- service_Section --}}

  <section id="service_section" class="py-4">
    <div class="container">
      <h1 class="text-center text-secondary">
        Sercices that we provide</h1>
      <div class="row mt-5">
        {{#each services}}
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <div class="container text-center py-3">
                <i class="{{this.icon}} service_icon text-secondary"></i>
              </div>
              <h3 class="card-title">{{this.title}}</h3>
              <p>{{this.description}}</p>

              <a href="{{this.link}}">{{this.linkText}}</a>
              <a href="#" class="ml-3">Support</a>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </section>

  {{!-- banner2 --}}

  <section class="banner2_section py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center pt-5">
          <h3>Learn for today or for future</h3>
          <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Illum, reprehenderit ipsam velit natus aspernatur
            fugit minus dolore! Hic aperiam libero porro! Rerum fuga nesciunt impedit eos sed itaque vero illo autem
            quibusdam?</p>
          <button class="btn btn-primary">
            Click Now!
          </button>
        </div>
        <div class="col-md-6 text-center py-2">
          <img src="/static/images/images.jpg" style="height: 300px;" alt="">
        </div>

      </div>
    </div>
  </section>
  {{!-- banner3_section --}}

  <section class="banner3_section py-5">
    <div class="container">
      <div class="row">

        <div class="col-md-6 text-center py-2">
          {{!-- lest side --}}
          <img src="/static/images/download.png" class="img-fluid" style="height: 300px;" alt="">
        </div>

        <div class="col-md-6 text-center pt-5">
          {{!-- right side --}}
          <h3>Learn for today or for future</h3>
          <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Illum, reprehenderit ipsam velit natus aspernatur
            fugit minus dolore! Hic aperiam libero porro! Rerum fuga nesciunt impedit eos sed itaque vero illo autem
            quibusdam?</p>
          <button class="btn btn-primary">
            Click Now!
          </button>
        </div>


      </div>
    </div>
  </section>




  {{!-- contact us section --}}

  <section id="contact_us_section" class="py-5 background1">
    <div class="container">
      <h3 class="text-center text-secondary">
        Contact Us
      </h3>
      <div class="row">
        <div class="col-md-12">
          <form action="/form-contact" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="contactNumber" class="form-label">Your contact number</label>
              <input name="phone" type="number" class="form-control" id="contactNumber">
            </div>
            <div class="form-floating my-2">
              <textarea name="query" style="height:250px" class="form-control" placeholder="Enter your query here"
                id="queryField"></textarea>
              <label for="queryField">Your query</label>
            </div>
            {{!-- <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div> --}}
            <div class="container text-center">
              <button type="submit" class="btn btn-dark">Submit</button>
            </div>

          </form>
        </div>
      </div>
    </div>

  </section>

  {{!-- About_section --}}
  <section class="about_section py-5">
    <div class="container text-center">
      <div class="row">
        <div class="col-md-12">
